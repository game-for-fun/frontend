<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ball.dao.CharacterDao">
	<resultMap id="BaseResultMap" type="com.ball.bean.Characters">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="skill_id" property="skillId" jdbcType="VARCHAR" />
		<result column="destiny_id" property="destinyId" jdbcType="VARCHAR" />
		<result column="attack" property="attack" jdbcType="INTEGER" />
		<result column="defence" property="defence" jdbcType="INTEGER" />
		<result column="assist" property="assist" jdbcType="INTEGER" />
		<result column="role" property="role" jdbcType="VARCHAR" />
		<result column="desc" property="desc" jdbcType="VARCHAR" />
		<result column="pic" property="pic" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getCharacterByName" resultMap="BaseResultMap">
		SELECT * FROM characters WHERE name = #{name}
	</select>
	
	<select id="getCNameByPic" resultMap="BaseResultMap">
		SELECT * FROM characters WHERE pic = #{pic}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		SELECT * FROM characters
	</select>
	
</mapper>