<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ball.dao.OnlineUserDao">
	<resultMap id="BaseResultMap" type="com.ball.bean.OnlineUser">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="last_login_time" property="lastLoginTime" jdbcType="DATE" />
	</resultMap>

	<select id="getOnlineUserByUserIdCurrentDay" resultMap="BaseResultMap">
		SELECT * FROM online_user WHERE user_id = #{userId} AND date(last_login_time) = curdate()
	</select>

	<insert id="insertOnlineUser" useGeneratedKeys="true" keyProperty="id" parameterType="com.ball.bean.OnlineUser">
		INSERT INTO online_user ( user_id,last_login_time ) 
		VALUES ( #{userId},#{lastLoginTime} )
	</insert>

	<select id="getUserByNickName" resultMap="BaseResultMap">
		SELECT * FROM user WHERE nick_name = #{nickName}
	</select>
	
	<update id="exchange" parameterType="com.ball.bean.User">
		UPDATE user set rmb = #{rmb} WHERE id = #{id}
	</update>
	
	<update id="updateOnlinUser" parameterType="com.ball.bean.OnlineUser">
		UPDATE online_user set 
		user_id = #{userId}, last_login_time = #{lastLoginTime}
		WHERE id = #{id}
	</update>
	
	<select id="get" resultMap="BaseResultMap">
		SELECT * FROM online_user WHERE id = #{id}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		SELECT * FROM online_user
	</select>
	
</mapper>